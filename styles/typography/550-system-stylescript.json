{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "System & Style Script",
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"slug": "extra-small",
					"size": "14px",
					"name": "Extra Small"
				},
				{
					"slug": "small",
					"size": "16px",
					"name": "Small"
				},
				{
					"slug": "normal",
					"size": "18px !important",
					"name": "Normal"
				},
				{
					"slug": "medium",
					"size": "22px",
			 		"name": "Medium (h5)"
				},
				{
					"slug": "large",
					"size": "clamp(24px, 6vw, 28px)",
					"name": "Large (h4)"
				},
				{
					"slug": "larger",
					"size": "clamp(30px, 7vw, 34px)",
					"name": "Larger (h3)"
				},
				{
					"slug": "x-large",
					"size": "clamp(36px, 10vw, 48px)",
					"name": "Extra Large (h2)"
				},
				{
					"slug": "huge",
					"size": "clamp(42px, 12vw, 54px) !important",
					"name": "Huge (h1)"
				},
				{
					"slug": "gigantic",
					"size": "clamp(52px, 14vw, 64px)",
					"name": "Gigantic"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)"
		},
		"blocks": {
			"core/heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			}
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--style-script)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--larger)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},			
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"textTransform": "none"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"textTransform": "none"
				}
			}			
		}
	}
}