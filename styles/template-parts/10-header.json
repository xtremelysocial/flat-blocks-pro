{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "section-header",
	"title": "Header",
	"blockTypes": [ "core/group" ],
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--custom--color--contrast--base, var(--wp--custom--color--contrast--default-light, var(--wp--preset--color--contrast)))"
		},
		"shadow": "none",
		"spacing": {
			"padding": {
				"top": "var(--wp--preset--spacing--40)",
				"bottom": "var(--wp--preset--spacing--40)"
			},
			"margin": {
				"top": "0",
				"bottom": "0"
			}
		},
		"border": {
			"style": "solid",
			"color": "var(--wp--custom--color--border)",
			"width": "0 0 1px"
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			}
		}		
	}
}
