{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "image-border",
	"title": "Image Border",
	"blockTypes": [ "core/gallery" ],
	"styles": {
		"blocks": {
			"core/image": {
				"border": {
					"style": "solid",
					"width": "1px",
					"color": "var(--wp--custom--border--color)",
					"radius": "var(--wp--custom--border--radius)"
				},
				"spacing": {
					"padding": "var:preset|spacing|20"
				}
			}
		}
	}
}
